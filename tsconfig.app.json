{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["typings/**/*", "src/**/*", "src/**/*.vue", "scan/**/*"],
  "exclude": ["src/**/__tests__/*", "dist", "node_modules/@types/node", "node_modules/.pnpm/@types/node/*"],
  "compilerOptions": {
    "types": ["unplugin-vue-router/client"],
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"],
      "~~/*": ["./scan/*"]
    },
    "allowJs": true,
    "noImplicitAny": false
  }
}
