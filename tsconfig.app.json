{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "./auto-imports.d.ts",
    "./components.d.ts",
    "index.d.ts",
    "typed-router.d.ts"
  ],
  "exclude": ["src/**/__tests__/*", "src/base/**/*", "src/utils/other/**/*", "dist"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["ESNext", "dom", "dom.iterable", "scripthost"],
    "allowJs": true,
    "outDir": "./",
    "isolatedModules": true,
    "suppressImplicitAnyIndexErrors": true,
    "ignoreDeprecations": "5.0",
    "allowImportingTsExtensions": true
  }
}
