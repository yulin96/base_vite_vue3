{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["typings/**/*", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "dist"],
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": "./",
    "paths": {
      "vant": ["node_modules/vant/es"],
      "~/*": ["./src/*"]
    },
    "allowJs": true,
    "noImplicitAny": false
  }
}
