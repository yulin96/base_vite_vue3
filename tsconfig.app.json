{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["typings/**/*", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "dist"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "allowJs": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
